    <script>
        // ==========================================
        // ‡¶∏‡ßá‡¶ü‡¶ø‡¶Ç‡¶∏
        // ==========================================
        var youtubeVideoID = "hl9g-RpC8vU"; // ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶≠‡¶ø‡¶°‡¶ø‡¶ì ‡¶Ü‡¶á‡¶°‡¶ø
        var secretPass = "143"; // üî¥ ‡¶™‡¶æ‡¶∏‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞‡ßç‡¶° (‡¶™‡¶∞‡¶ø‡¶¨‡¶∞‡ßç‡¶§‡¶® ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡ßá‡¶®)
        
        // ‡¶á‡¶®‡ßç‡¶ü‡ßç‡¶∞‡ßã ‡¶Æ‡ßá‡¶∏‡ßá‡¶ú ‡¶≤‡¶ø‡¶∏‡ßç‡¶ü (‡¶è‡¶ï‡¶ü‡¶æ‡¶∞ ‡¶™‡¶∞ ‡¶è‡¶ï‡¶ü‡¶æ ‡¶Ü‡¶∏‡¶¨‡ßá)
        var messages = [
            "‡¶∂‡ßã‡¶®‡ßã...", 
            "‡¶§‡ßã‡¶Æ‡¶æ‡¶ï‡ßá ‡¶ï‡¶ø‡¶õ‡ßÅ ‡¶¨‡¶≤‡¶æ‡¶∞ ‡¶õ‡¶ø‡¶≤...", 
            "‡¶ú‡¶æ‡¶®‡¶ø ‡¶®‡¶æ ‡¶ï‡¶ø‡¶≠‡¶æ‡¶¨‡ßá ‡¶¨‡¶≤‡¶¨...", 
            "‡¶ï‡¶ø‡¶®‡ßç‡¶§‡ßÅ ‡¶Ü‡¶ú ‡¶¨‡¶≤‡¶§‡ßá‡¶á ‡¶π‡¶¨‡ßá...",
            "‡¶™‡¶æ‡¶∏‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞‡ßç‡¶° ‡¶¶‡¶ø‡ßü‡ßá ‡¶¶‡ßá‡¶ñ‡ßã ‚ù§Ô∏è"
        ];

        // ==========================================
        // ‡¶≤‡¶ú‡¶ø‡¶ï
        // ==========================================
        
        // ‡ßß. ‡¶á‡¶â‡¶ü‡¶ø‡¶â‡¶¨ API ‡¶≤‡ßã‡¶°
        var tag = document.createElement('script');
        tag.src = "https://www.youtube.com/iframe_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        var player;
        function onYouTubeIframeAPIReady() {
            player = new YT.Player('player', {
                videoId: youtubeVideoID,
                playerVars: {
                    'autoplay': 0, 'controls': 0, 'showinfo': 0, 'rel': 0, 
                    'loop': 1, 'playlist': youtubeVideoID, 
                    'playsinline': 1, 'modestbranding': 1, 'iv_load_policy': 3
                },
                events: { 'onReady': onPlayerReady }
            });
        }
        function onPlayerReady(event) { /* ‡¶≠‡¶ø‡¶°‡¶ø‡¶ì ‡¶∞‡ßá‡¶°‡¶ø */ }

        // ‡ß®. ‡¶π‡¶æ‡¶∞‡ßç‡¶ü ‡¶è‡¶®‡¶ø‡¶Æ‡ßá‡¶∂‡¶® ‡¶§‡ßà‡¶∞‡¶ø
        function createHearts() {
            const container = document.getElementById('hearts');
            const heartCount = 30;
            for(let i=0; i<heartCount; i++) {
                const heart = document.createElement('div');
                heart.classList.add('heart');
                heart.innerHTML = Math.random() > 0.5 ? '‚ù§Ô∏è' : 'üåπ';
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.animationDuration = Math.random() * 5 + 5 + 's';
                heart.style.fontSize = Math.random() * 20 + 10 + 'px';
                container.appendChild(heart);
            }
        }
        createHearts();

        // ‡ß©. ‡¶á‡¶®‡ßç‡¶ü‡ßç‡¶∞‡ßã ‡¶ü‡ßá‡¶ï‡ßç‡¶∏‡¶ü ‡¶´‡ßç‡¶≤‡ßã
        let msgIndex = 0;
        const msgElement = document.getElementById('msg');
        const introScreen = document.getElementById('intro-screen');
        const securityScreen = document.getElementById('security-screen');

        function startFlow() {
            msgElement.style.opacity = 1;
            showNextMessage();
        }

        function showNextMessage() {
            if(msgIndex < messages.length) {
                msgElement.style.opacity = 0; // Fade out
                setTimeout(() => {
                    msgElement.innerText = messages[msgIndex];
                    msgElement.style.opacity = 1; // Fade in
                    msgIndex++;
                    setTimeout(showNextMessage, 2500); // ‡ß®.‡ß´ ‡¶∏‡ßá‡¶ï‡ßá‡¶®‡ßç‡¶° ‡¶™‡¶∞ ‡¶™‡¶∞‡ßá‡¶∞ ‡¶Æ‡ßá‡¶∏‡ßá‡¶ú
                }, 1000);
            } else {
                // ‡¶Æ‡ßá‡¶∏‡ßá‡¶ú ‡¶∂‡ßá‡¶∑ ‡¶π‡¶≤‡ßá ‡¶™‡¶æ‡¶∏‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞‡ßç‡¶° ‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶ø‡¶® ‡¶Ü‡¶∏‡¶¨‡ßá
                setTimeout(() => {
                    introScreen.style.opacity = 0;
                    setTimeout(() => {
                        introScreen.style.display = 'none';
                        securityScreen.style.display = 'flex';
                        setTimeout(() => securityScreen.style.opacity = 1, 100);
                    }, 1000);
                }, 1000);
            }
        }

        // ‡¶∂‡ßÅ‡¶∞‡ßÅ‡¶§‡ßá ‡¶ü‡ßç‡¶Ø‡¶æ‡¶™ ‡¶ï‡¶∞‡¶≤‡ßá ‡¶∂‡ßÅ‡¶∞‡ßÅ ‡¶π‡¶¨‡ßá (‡¶Ö‡¶°‡¶ø‡¶ì ‡¶™‡¶≤‡¶ø‡¶∏‡¶ø‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø)
        document.body.addEventListener('click', function() {
            if(msgIndex === 0) startFlow();
        }, {once:true});


        // ‡ß™. ‡¶™‡¶æ‡¶∏‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞‡ßç‡¶° ‡¶ö‡ßá‡¶ï‡¶ø‡¶Ç
        function checkPass() {
            var input = document.getElementById('password');
            var error = document.getElementById('error-msg');
            var videoContainer = document.getElementById('video-container');

            if(input.value === secretPass) {
                input.blur();
                securityScreen.style.transform = "translateY(-100%)";
                
                setTimeout(() => {
                    videoContainer.style.opacity = 1;
                    videoContainer.style.pointerEvents = "auto";
                    
                    if(player && player.playVideo) {
                        player.unMute();
                        player.setVolume(100);
                        player.playVideo();
                    }
                }, 500);
                
                // ‡¶Ü‡¶∞‡ßã ‡¶¨‡ßá‡¶∂‡¶ø ‡¶π‡¶æ‡¶∞‡ßç‡¶ü ‡¶ì‡ßú‡¶¨‡ßá
                setInterval(() => {
                    const heart = document.createElement('div');
                    heart.classList.add('heart');
                    heart.innerHTML = 'üíñ';
                    heart.style.left = Math.random() * 100 + 'vw';
                    heart.style.animationDuration = '4s';
                    document.getElementById('hearts').appendChild(heart);
                    setTimeout(() => heart.remove(), 4000);
                }, 300);

            } else {
                error.innerText = "‡¶≠‡ßÅ‡¶≤ ‡¶™‡¶æ‡¶∏‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞‡ßç‡¶°! ‡¶™‡ßç‡¶∞‡¶ø‡¶Ø‡¶º‡¶æ‡¶ô‡ßç‡¶ï‡¶æ ‡¶π‡¶≤‡ßá ‡¶†‡¶ø‡¶ï ‡¶¶‡¶ø‡¶§‡ßá! ü•∫";
                input.classList.add('shake');
                input.value = "";
                setTimeout(() => input.classList.remove('shake'), 400);
            }
        }
    </script>
